pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
                echo "âœ… Checked out frontend files from GitHub"
            }
        }

        stage('Start Frontend Server') {
            steps {
                echo "ğŸš€ Starting local web server..."
                bat '''
                python -m http.server 8080
                '''
            }
        }
    }

    post {
        success {
            echo 'âœ… Frontend server started successfully!'
            echo 'ğŸŒ Open your browser and go to: http://localhost:8080'
        }
        failure {
            echo 'âŒ Pipeline failed!'
        }
    }
}
